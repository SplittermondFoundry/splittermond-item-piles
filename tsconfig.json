{
  "extends": "@tsconfig/node20",
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "noEmit": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "lib": ["es2020", "dom"],
  },
  "include": ["src/**/*"],
}
